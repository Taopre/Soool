            <!--app:layout_constraintHorizontal_bias="0.0"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/qnaboardImageBtn"-->
            <!--app:layout_constraintVertical_bias="0.0"-->
            <!--tools:ignore="MissingConstraints">-->

            <!--<RadioButton-->
                <!--android:id="@+id/qnaboardVoteText"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="텍스트"/>-->

            <!--<RadioButton-->
                <!--android:id="@+id/qnaboardVoteImage"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="이미지"/>-->
        <!--</RadioGroup>-->

        <LinearLayout
            android:id="@+id/qnaboardVoteLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWrapLayount"
            app:layout_constraintVertical_bias="0.247">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp" />

        <GridView
            android:id="@+id/gridview"
            android:visibility="gone"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>
