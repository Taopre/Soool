<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="14dp"
    android:background="#ffffff"
    android:paddingRight="@dimen/all_space_between_18dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/all_button_cancel"
        android:textSize="@dimen/text_size_15dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/grayMid"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/subActionBarLeft"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/app_back"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:id="@+id/subActionBarLeftImage"
        android:visibility="gone"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_15dp"
        android:gravity="center"
        android:text="@string/all_button_modify"
        android:layout_toLeftOf="@id/subActionBarRight"
        android:layout_marginRight="5dp"
        android:textColor="@color/greenDark"
        android:visibility="gone"
        android:id="@+id/subActionBarRight2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_15dp"
        android:text="저장하기"
        android:layout_alignParentRight="true"
        android:textColor="@color/greenDark"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/subActionBarRight"/>

</RelativeLayout>