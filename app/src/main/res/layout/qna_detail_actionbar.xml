<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/border_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/drawupBackLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/drawupBack"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/all_space_between_18dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="17dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/app_back"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawupTextLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/drawupModify"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="@dimen/all_space_between_16dp"
            android:textSize="@dimen/text_size_15dp"
            android:textColor="@color/greenMain"
            android:text="@string/all_button_modify"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/drawupReport"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="@dimen/all_space_between_18dp"
            android:textSize="@dimen/text_size_15dp"
            android:textColor="@color/greenMain"
            android:visibility="visible"
            android:text="@string/qna_detail_button_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
