<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/border_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drawupBack"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/all_space_between_18dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="17dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/app_back"/>

    <TextView
        android:id="@+id/drawupModify"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/drawupBack"
        android:layout_alignBottom="@+id/drawupBack"
        android:layout_marginEnd="@dimen/all_space_between_18dp"
        android:textSize="@dimen/text_size_15dp"
        android:textColor="@color/greenMain"

        android:text="@string/all_button_modify"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drawupReport"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/drawupBack"
        android:layout_alignBottom="@+id/drawupBack"
        android:layout_marginEnd="@dimen/all_space_between_18dp"
        android:textSize="@dimen/text_size_15dp"
        android:textColor="@color/greenMain"
        android:visibility="visible"
        android:text="@string/qna_detail_button_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
