<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_Exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/text_size_20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/qna_post_remove_vote"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_textVote"
                android:src="@drawable/vote_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="@dimen/all_space_between_12dp"/>

            <TextView
                android:id="@+id/tv_textVote"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iv_textVote"
                android:layout_marginBottom="31dp"
                android:layout_below="@+id/iv_textVote"
                android:textColor="@color/greenDark"
                android:gravity="center"
                android:textSize="@dimen/text_size_14dp"
                android:text="텍스트"/>

            <View
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/iv_textVote"
                android:layout_alignTop="@+id/iv_textVote"
                android:layout_marginStart="70dp"
                android:background="@color/grayLight_a50"/>


            <ImageView
                android:id="@+id/iv_imageVote"
                android:src="@drawable/vote_txt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/iv_textVote"
                android:layout_marginStart="140dp"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="@dimen/all_space_between_12dp" />

            <TextView
                android:id="@+id/tv_imageVote"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iv_imageVote"
                android:layout_marginBottom="31dp"
                android:layout_below="@+id/iv_imageVote"
                android:gravity="center"
                android:textColor="@color/greenDark"
                android:textSize="@dimen/text_size_14dp"
                android:text="이미지"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>