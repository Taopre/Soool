<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_marginStart="@dimen/text_size_13dp"
        android:layout_marginTop="@dimen/text_size_13dp"
        android:layout_marginBottom="@dimen/all_text_12dp_space_6dp"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:id="@+id/editid"
        android:textSize="@dimen/text_size_14dp"
        android:hint="투표 내용을 입력해주세요."
        android:background="@android:color/transparent"/>
    
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="10dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/deleteText"
        android:src="@drawable/vote_remove_opt_txt"/>

</RelativeLayout>