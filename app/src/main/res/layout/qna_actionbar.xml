<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/border_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/drawupBackLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/drawupBack"
            android:layout_marginStart="@dimen/all_space_between_18dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15dp"
            android:text="@string/all_button_cancel"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/drawupDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="17dp"
        android:paddingTop="21dp"
        android:paddingEnd="@dimen/all_space_between_16dp"
        android:paddingStart="21dp"
        android:layout_toLeftOf="@+id/drawupEnroll"
        android:textSize="@dimen/text_size_15dp"
        android:text="@string/all_button_delete" />

    <TextView
        android:paddingBottom="17dp"
        android:paddingTop="21dp"
        android:paddingEnd="@dimen/text_size_18dp"
        android:paddingStart="21dp"
        android:id="@+id/drawupEnroll"
        android:text="@string/all_button_save"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>