<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="true"
      >

        <shape
            android:shape="line"
            >


            <stroke

                android:width="1dp"
                android:color="@color/greenDark"/>
            <padding
                android:bottom="@dimen/all_space_between_20dp"/>

        </shape>

    </item>

    <item
        android:state_focused="false"
       >

        <shape
            android:shape="line"
            >

            <stroke
                android:width="1dp" android:color="@color/grayLight"/>

            <padding
                android:bottom="40dp"
                />
        </shape>

    </item>

</selector>